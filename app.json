{
  "expo": {
    "name": "simplesolat",
    "slug": "simplesolat",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "simplesolat",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.simplesolat.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["android.permission.SCHEDULE_EXACT_ALARM"],
      "package": "com.simplesolat.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "node_modules/@expo-google-fonts/jetbrains-mono/400Regular/JetBrainsMono_400Regular.ttf",
            "node_modules/@expo-google-fonts/jetbrains-mono/500Medium/JetBrainsMono_500Medium.ttf",
            "node_modules/@expo-google-fonts/jetbrains-mono/600SemiBold/JetBrainsMono_600SemiBold.ttf",
            "node_modules/@expo-google-fonts/jetbrains-mono/700Bold/JetBrainsMono_700Bold.ttf",
            "node_modules/@expo-google-fonts/jetbrains-mono/800ExtraBold/JetBrainsMono_800ExtraBold.ttf"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "simplesolat needs your location in order to display the correct JAKIM prayer times for your location",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": false
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "react-native-android-widget",
        {
          "fonts": [
            "./assets/fonts/JetBrainsMono_400Regular.ttf",
            "./assets/fonts/JetBrainsMono_500Medium.ttf",
            "./assets/fonts/JetBrainsMono_600SemiBold.ttf",
            "./assets/fonts/JetBrainsMono_700Bold.ttf",
            "./assets/fonts/JetBrainsMono_800ExtraBold.ttf"
          ],
          "widgets": [
            {
              "name": "WaktuSolat",
              "label": "Waktu Solat",
              "minWidth": "350dp",
              "minHeight": "60dp",
              "targetCellWidth": 5,
              "targetCellHeight": 1,
              "description": "prayer times widget",
              "previewImage": "./assets/widget-preview/waktu-solat.png",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "WaktuSolatTransparent",
              "label": "Waktu Solat Transparent",
              "minWidth": "350dp",
              "minHeight": "60dp",
              "targetCellWidth": 5,
              "targetCellHeight": 1,
              "description": "prayer times widget (transparent background)",
              "previewImage": "./assets/widget-preview/waktu-solat-transparent.png",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "WaktuSolatCompact",
              "label": "Waktu Solat Compact",
              "minWidth": "280dp",
              "minHeight": "60dp",
              "targetCellWidth": 4,
              "targetCellHeight": 1,
              "description": "prayer times widget (compact)",
              "previewImage": "./assets/widget-preview/waktu-solat.png",
              "updatePeriodMillis": 1800000
            }
          ]
        }
      ],
      "expo-background-task"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3bcad127-53f2-48b9-91e2-8eb34746eb93"
      }
    },
    "owner": "ragibkl"
  }
}
